{
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:storybook/recommended"
    ],
    "overrides": [
      {
        "env": {
          "node": true
        },
        "files": [".eslintrc.{js,cjs}"],
        "parserOptions": {
          "sourceType": "script"
        }
      }
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "react",
      "prettier",
      "react-hooks"
    ],
    "rules": {
      "prettier/prettier": "error",
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": ["off"]
  
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  }
  